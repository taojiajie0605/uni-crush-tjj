.content {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
.content .warp {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  width: 100%;
}
.content .warp .startText {
  font-family: "Arial", sans-serif;
  font-size: 36px;
  background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: bold;
}
.content .warp .startNum {
  margin-top: 20px;
  font-family: "Arial", sans-serif;
  font-size: 50px;
  background-image: linear-gradient(to right, #ff8177 0%, #ff867a 0%, #ff8c7f 21%, #f99185 52%, #cf556c 78%, #b12a5b 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: bold;
}
.content .warp .endNum {
  margin-top: 20px;
  font-family: "Arial", sans-serif;
  font-size: 50px;
  background-image: linear-gradient(to right, #ff8177 0%, #ff867a 0%, #ff8c7f 21%, #f99185 52%, #cf556c 78%, #b12a5b 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: bold;
}
.content .warp .toGameHome {
  width: 50vw;
  height: 10vw;
}
.topContent {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.topContent .totalCount {
  font-family: "Arial", sans-serif;
  font-size: 40rpx;
  background-image: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: bold;
}
.topContent .timeClock {
  font-family: "Arial", sans-serif;
  font-size: 40rpx;
  background-image: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-weight: bold;
}
.cBg {
  box-sizing: border-box;
  width: 750rpx;
  padding: 2rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: row;
}
.acol {
  height: 750rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
}
.acol .aItem {
  border-radius: 10rpx;
  width: 76rpx;
  height: 76rpx;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border: 4rpx solid #fff;
}
.acol .aItem .pimg {
  border-radius: 6rpx;
  width: 76rpx;
  height: 76rpx;
}
.acol .aItem .miniPimg {
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 30rpx;
  height: 30rpx;
}
.acol .aItemSelect {
  border: 4rpx solid red;
}
.acol .aItemB1 {
  border: 4rpx solid #6a11cb;
}

